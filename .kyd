{
	"Build": {
		"Name": "{CurrentDirName}",
		"Configuration": "Release",
		"OutputDir": "{UserDir}/bin",
		"Cmd": [
			{
				"Comment": "Build the source code into {OutputDir}/Debug using {Task}",
				"RunIn": "{CurrentDir}",
				"Task": "dotnet",
				"args": "build {OutRedirect} {OutputDir}/Debug",
				"OutRedirect": "-o",
				"Conditions": [
					{
						"Input": "{Configuration}",
						"EqualsTo": "Debug"
					}
				]
			},
			{
				"Comment": "Build the source code into {OutputDir} using {Task}",
				"RunIn": "{CurrentDir}",
				"Task": "dotnet",
				"args": "build -c Release {OutRedirect} {OutputDir}",
				"OutRedirect": "-o",
				"Conditions": [
					{
						"Input": "{Configuration}",
						"EqualsTo": "Release"
					}
				]
			},
			{
				"Comment": "Clear {OutputDir} from autogenerated files",
				"RunIn": "{OutputDir}",
				"Task": "rm",
				"args": "-r *.pdb ref rm *.xml rm *.dev.* *.deps.* *.nupkg",
				"Conditions": [
					{
						"Input": "{Configuration}",
						"EqualsTo": "Release"
					}
				]
			}
		]
	}
}